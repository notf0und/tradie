<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>Laravel coding standards ruleset.</description>
    <rule ref="PSR2"/>
    <arg name="colors"/>
    <arg name="parallel" value="75"/>

    <file>app</file>
    <file>bootstrap</file>
    <file>config</file>
    <file>database</file>
    <file>resources</file>
    <file>routes</file>

    <exclude-pattern>app/Http/Middleware/TrustProxies.php</exclude-pattern>
    <exclude-pattern>resources/lang/*</exclude-pattern>
    <exclude-pattern>database/seeds</exclude-pattern>
    <exclude-pattern>bootstrap/cache/*</exclude-pattern>
    <exclude-pattern>bootstrap/autoload.php</exclude-pattern>
    <exclude-pattern>*/migrations/*</exclude-pattern>
    <exclude-pattern>*.blade.php</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>
</ruleset>
